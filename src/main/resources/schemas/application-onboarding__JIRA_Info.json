{
  "$id": "application-onboarding__JIRA_Info.json",
  "title": "Provide information about JIRA",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "projectKey": {
      "title": "Project Key",
      "description": "JIRA project key",
      "type": "string",
      "enum": ["OR"],
      "default": "OR"
    },
    "reporter": {
      "title": "Reporter",
      "description": "JIRA user name",
      "type": "string",
      "enum": ["ghcaponetto"],
      "default": "ghcaponetto"
    },
    "assignee": {
      "title": "Assignee",
      "description": "JIRA user name",
      "type": "string",
      "enum": ["ghcaponetto"],
      "default": "ghcaponetto"
    },
    "timeout": {
      "title": "Timeout",
      "description": "Time to wait for the JIRA ticket to be resolved",
      "type": "string",
      "default": "PT30S",
      "oneOf": [
        {
          "const": "PT30S",
          "title": "30 seconds"
        },
        {
          "const": "PT8H",
          "title": "8 hours"
        }
      ]
    }
  },
  "required": ["assignee", "projectKey", "reporter", "timeout"]
}
